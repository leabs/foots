---
import { Trophy } from 'lucide-astro'
---

<div>
  <div class='py-4 flex gap-2 items-center justify-center'>
    <Trophy size='15px' class='text-yellow' />
    <h3 class='font-semibold text-md uppercase'>Escolha o campeonato</h3>
  </div>

  <div
    class='relative max-w-xs flex gap-6 snap-x snap-mandatory overflow-x-auto
pb-14'
  >
    <div class='snap-center shrink-0'>
      <a href='/campeonato/brasileiro-serie-a'>
        <img
          class='shrink-0 w-50 h-50 md:w-80 md:h-80 rounded-lg object-contain'
          src='/img/brasileiro-seriea.png'
        />
      </a>
    </div>
    <div class='snap-center shrink-0'>
      <img
        class='shrink-0 w-60 h-60 md:w-80 md:h-80 rounded-lg'
        src='/img/liberta.png'
      />
    </div>
  </div>
</div>
